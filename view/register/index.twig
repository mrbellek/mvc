{% extends "_layout.twig" %}

{% block css %}
    label { margin-top: 1em; }
    fieldset { border: 1px solid #DDD; padding: 1em; width: 300px; margin: auto; }
    fieldset img { display: block; margin: auto; width: 200px; }
{% endblock css %}

{% block main_content %}

    <div class="row">
        <div class="col-md-12">
            <h1>Register a new account</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <form method="post" action="/register">
                <fieldset>
                    <img src="/public/img/logo.jpg" alt="MVC Logo" />
                    <div class="input-group mb-3">
                        <label for="username">Username:</label>
                        <input class="form-control" type="text" id="username" name="username" placeholder="Your username" required="required">
                    </div>
                    <div class="input-group mb-3">
                        <label for="email">Email address:</label>
                        <input class="form-control" type="text" id="email" name="email" value="{{ email }}" placeholder="Your email" required="required">
                    </div>
                    <div class="input-group mb-3">
                        <label for="password">Password:</label>
                        <input class="form-control" type="password" id="password" name="password" value="{{ password }}" required="required" placeholder="Your password">
                    </div>
                    <div class="input-group mb-3">
                        <label for="password">Repeat password:</label>
                        <input class="form-control" type="password" id="passwordVerify" name="passwordVerify" value="{{ passwordVerify }}" required="required" placeholder="Type your password again">
                    </div>
                    <div class="input-group mb-3">
                        <label for="submit">&nbsp;</label>
                        <input type="submit" name="submit" value="Register" class="btn btn-primary">
                    </div>
                </fieldset>
            </form>
		</div>
	</div>
</div>

{% endblock main_content %}